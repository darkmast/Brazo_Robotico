<mujoco model="so_arm100_open_box_scene">
    <include file="so_arm100.xml"/>

    <statistic center="0 -0.2 0.1" extent="0.4"/>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="140" elevation="-30"/>
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
        <material name="box_material" rgba="0.7 0.2 0.2 1"/>
    </asset>

    <worldbody>
        <!-- Ground plane -->
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
        <geom name="floor" size="2 2 0.05" type="plane" material="groundplane"/>

        <!-- Open Box -->
        <body name="open_box" pos="0.4 0 0.1">
            <!-- Front wall -->
            <geom name="box_front" type="box" size="0.12 0.01 0.12" pos="0 0.13 0" material="box_material"/>
            <!-- Back wall -->
            <geom name="box_back" type="box" size="0.12 0.01 0.12" pos="0 -0.13 0" material="box_material"/>
            <!-- Left wall -->
            <geom name="box_left" type="box" size="0.01 0.12 0.12" pos="-0.13 0 0" material="box_material"/>
            <!-- Right wall -->
            <geom name="box_right" type="box" size="0.01 0.12 0.12" pos="0.13 0 0" material="box_material"/>
            <!-- Bottom -->
            <geom name="box_bottom" type="box" size="0.2 0.2 0.01" pos="0 0 -0.13" material="box_material"/>
        </body>

        <!-- Box -->
        <body name="box" pos="-0.25 -0.1 0.1">
            <geom name="box_geom" type="box" size="0.05 0.01 0.02" rgba="1 0 0 1" density="1000"/>
            <joint name="box_joint" type="free"/>
        </body>
    
        <!-- Ball -->
        <body name="autonomous_object" pos="0 0 0.1">
            <geom name="moving_object" type="sphere" size="0.05" rgba="0.2 0.8 0.2 1"/>
            <joint name="move_x" type="slide" axis="1 0 0"/> <!-- Movimiento a lo largo del eje X -->
        </body>
    </worldbody>

    <!-- Controladores actuadores -->
    <actuator>
        <motor joint="move_x" ctrlrange="-1 1" ctrllimited="true"/>
    </actuator>


    <!-- Opciones del simulador -->
    <option timestep="0.002" gravity="0 0 -9.81" iterations="50" integrator="RK4"/>
 
    <!-- Keyframes -->
    <keyframe>
        <key name="home_scene" qpos="0 0 0 0 0 0"/>
        <key name="start" qpos="0 0 0 0 0 0"/>
        <key name="end" qpos="1 0 0 0 0 0"/>
    </keyframe>
</mujoco>
